/*Vars*/
Montserrat = 'Montserrat', sans-serif
Raleway = 'Raleway', sans-serif
LightText = #EEE
DarkText = #222
/*Color Palet*/
MainColor = #D32F2F
DarkColor = #C62828
DarkestColor = #B71C1C
BreakColor = #FFC400
DarkBreakColor = #FFAB00
/*Other Colors*/
Facebook = #3B5999

h1
	text-align left
	

.galery 
	text-align center
	.galery__pic
		display inline-block
		margin .5em
		max-width 100%
		transition all .5s ease-in
		.galery__pic__img
			border-radius 5%
			height 100% 
			width 100% 
		.galery__pic__caption
			display block 
			
.galery__item
	border-radius 100%
	cursor pointer
	height 300px
	overflow hidden
	position relative
	transition all 1s ease-out
	width 300px
	display inline-block
	margin-right 1em
	margin-bottom 1em
	img 
		border-radius 100%
		transition all .5s ease-in
		width 300px
	&:hover img
		-ls-filter grayscale(100%)
		-moz-filter grayscale(100%)
		-o-filter grayscale(100%)
		-webkit-filter grayscale(100%)
		transition all 1s ease-out
	.darker 
		background-color rgba(0,0,0,0.5)
		border-radius 100%
		height 300px
		position absolute
		transition all 1s ease-out
		width 300px
	&:hover .darker 
		background-color rgba(0,0,0,0)
		transition all 1s ease-out
	.galery__item__description
		font-size 40px
		left 10%
		position absolute
		text-shadow rgb(0,0,0) 1px 1px 0px
		top 20%
		transition all .3s ease-out
	&:hover .galery__item__description
		top 400px
		transition all 1s ease-out
	.galery__item__ver
		color MainColor
		font-size 40px
		left 19%
		position absolute
		text-shadow rgb(0,0,0) 1px 1px 0px
		top -100%
		transition all 1s ease-out
	&:hover .galery__item__ver
		top 90px
		transition all .5s ease-out
		
		
			
@media (min-width: 845px)
	body
		position relative
		
	.galery 
		.galery__pic
			height 200px 
			width 200px 
			cursor pointer
			.galery__pic__caption
				display none 
				
	.screen--black
		background-color rgba(0,0,0,0.8)
		bottom 0
		height 100%
		left 0
		position absolute
		top 0
		width 100%
		display none
		z-index 1
	
@media (min-width: 1165px)		
	.centralcontainer
		width 700em
	
	.galery
		text-align left
		.galery__pic
			text-align center
	

