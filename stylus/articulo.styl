Montserrat = 'Montserrat', sans-serif
Raleway = 'Raleway', sans-serif
LightText = #EEE
DarkText = #222
/*Color Palet*/
MainColor = #D32F2F
DarkColor = #C62828
DarkestColor = #B71C1C
BreakColor = #FFC400
DarkBreakColor = #FFAB00
/*Other Colors*/
Facebook = #3B5999

h1
	text-align left

.fb_iframe_widget
	display none !important
	
.author
	color #777
	text-align left

.card
	text-align left
	padding .3em .5em
	p 
		line-height 170%
	ul
		li 
			line-height 170%
			
.pic
	width auto
	text-align center
	figcaption
		font-weight bold
	img
		max-width 100%
		max-height 100%
			
@media (min-width: 1165px)
	.card
		text-align center
		ul
			text-align left
			li
				text-align left
		p 
			text-align justify
	
	.fb_iframe_widget
		display inline-block !important
		
	.social__share
		text-align left
		width 800px
		display inline-block