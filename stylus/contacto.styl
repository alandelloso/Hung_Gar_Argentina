/*Vars*/
Montserrat = 'Montserrat', sans-serif
Raleway = 'Raleway', sans-serif
LightText = #EEE
DarkText = #222
/*Color Palet*/
MainColor = #D32F2F
DarkColor = #C62828
DarkestColor = #B71C1C
BreakColor = #FFC400
DarkBreakColor = #FFAB00
/*Other Colors*/
Facebook = #3B5999

h1
	text-align left
	
h4
	font-size 110%
	transition all .5s ease
	
.bus 
	width 100px
	display inline-block

.mail, .sedes
	background-color #111
	padding 3em 0

.mail__picture
	display inline-block
	background-image url("../img/message-icon.png")
	background-repeat no-repeat
	background-size 100px
	height 100px
	width 100px
	
.sede__capital, .sede__laplata
	text-align left
	margin-top 2em
	a 
		text-decoration none
		color DarkText
		transition all .2s ease-out
		&:hover
			color MainColor
	&:hover a
		padding-left .3em
		font-weight bold
		font-size 110%
	&:hover .marker
			width 20px
			
	.marker
		width 15px
		transition all .2s ease-out
	
.sedes__picture
	display inline-block
	background-image url("../img/mark-icon.png")
	background-repeat no-repeat
	background-size 100px
	height 100px
	width 100px

@media (min-width: 1065px)
	.centralcontainer
		width 70em
		
	.flexme
		display -webkit-box
		display -moz-box
		display -ms-flexbox
		display -webkit-flex
		display flex
		justify-content space-around
		
	.sede__capital, .sede__laplata
		vertical-align top 
		width 48%
	
	.mail 
		&:hover h4
			color BreakColor
			transition all .5s ease
			font-size 200%