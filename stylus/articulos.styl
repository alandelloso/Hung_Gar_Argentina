/*Vars*/
Montserrat = 'Montserrat', sans-serif
Raleway = 'Raleway', sans-serif
LightText = #EEE
DarkText = #222
/*Color Palet*/
MainColor = #D32F2F
DarkColor = #C62828
DarkestColor = #B71C1C
BreakColor = #FFC400
DarkBreakColor = #FFAB00
/*Other Colors*/
Facebook = #3B5999

h1
	text-align left

.new-article
	border-radius 2px
	display inline-block
	margin-bottom 15px
	max-height 360px
	max-width 300px
	overflow hidden
	position relative
	img
		height 100%
		width 100%
	.interaction-container
		background-color rgba(0,0,0,0.5)
		bottom 0
		height 40%
		position absolute
		text-align left
		width 100%
		.interaction-container__title
			color #FFF
			font-family Raleway
			font-weight normal
			margin 20px 0 5px 10px
		.interaction-container__subtitle
			color #FFF
			font-family Raleway
			font-weight normal
			margin 5px 0 5px 10px
		.interaction-container__action-button
			background none
			border none
			margin 20px 0 0 5px
			a 
				color #FFF
				font-weight bold
				text-decoration none
			
@media (min-width: 1165px)
	.centralcontainer
		width 70em
		
	.flex-box
		padding 0 40px
		display -webkit-box
		display -moz-box
		display -ms-flexbox
		display -webkit-flex
		display flex
		justify-content space-between
		flex-flow row wrap
		
