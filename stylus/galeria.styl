/*Vars*/
Montserrat = 'Montserrat', sans-serif
Raleway = 'Raleway', sans-serif
LightText = #EEE
DarkText = #222
/*Color Palet*/
MainColor = #D32F2F
DarkColor = #C62828
DarkestColor = #B71C1C
BreakColor = #FFC400
DarkBreakColor = #FFAB00
/*Other Colors*/
Facebook = #3B5999

h1
	text-align left
	

.galery 
	text-align center
	.galery__pic
		display inline-block
		margin .5em
		max-width 100%
		transition all .5s ease-in
		.galery__pic__img
			border-radius 5%
			height 100% 
			width 100% 
		.galery__pic__caption
			display block 
			
.galery__item
	cursor pointer
	overflow hidden
	position relative
	transition all 1s ease-out
	display inline-block
	img 
		transition all .5s ease-in
		width 100%
	.darker 
		background-color rgba(0,0,0,0.5)
		height 100%
		position absolute
		transition all 1s ease-out
		width 100%
	.galery__item__description
		font-size 40px
		position absolute
		text-shadow rgb(0,0,0) 1px 1px 0px
		bottom 10%
		transition all .3s ease-out
		
			
@media (min-width: 845px)
	body
		position relative
		
	.galery 
		.galery__pic
			height 200px 
			width 200px 
			cursor pointer
			.galery__pic__caption
				display none 
				
	.screen--black
		background-color rgba(0,0,0,0.8)
		bottom 0
		height 100%
		left 0
		position absolute
		top 0
		width 100%
		display none
		z-index 1
	
@media (min-width: 1165px)		
	.centralcontainer
		width 700em
		
	.flex-box
		padding 0 40px
		display -webkit-box
		display -moz-box
		display -ms-flexbox
		display -webkit-flex
		display flex
		justify-content space-between
		flex-flow row wrap
	
	.galery
		text-align left
		.galery__pic
			text-align center
	

